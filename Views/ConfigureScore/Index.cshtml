@model IEnumerable<WEB_SCONET_MANAGEMENT.table_mark_range>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Result Set-Up</h1>

<h3 class="text-center">Current Configuration Set-Up for Score</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center">
    <tr>
        <th class="text-center">
           First CA. Total
        </th>
        <th class="text-center">
            Second CA. Total
        </th>
        <th class="text-center">
            Examination Total
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.School)
        </th>
        
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Date)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.First_Ca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Second_Ca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.School)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.p_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.p_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.p_id })
        </td>
    </tr>
}

</table>
