@model IEnumerable<WEB_SCONET_MANAGEMENT.table_class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h3>List of Current Classes</h3>

<p>
    @Html.ActionLink("Add New Class", "Create")
</p>
<table class="table table-bordered table-condensed table-hover table-responsive table-striped text-center" id="dist">
    <tr>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.Class)
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
           Identifier
        </th>
        <th style="text-align: center;">
            @Html.DisplayNameFor(model => model.School)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.School)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.p_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.p_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.p_id })
        </td>
    </tr>
}

</table>


<script>
            $(document).ready(function() {
                $('#dist').DataTable({
                        responsive: true
                });
            });
</script>

